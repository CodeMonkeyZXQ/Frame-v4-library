<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0.3dp"
        android:left="0.3dp"
        android:right="0.3dp"
        android:top="0.3dp">
        <shape>
            <solid android:color="@color/green_dis" />

            <padding
                android:bottom="0.3dp"
                android:left="0.3dp"
                android:right="0.3dp"
                android:top="0.3dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="25dp" />
        </shape>
    </item>

</layer-list>