<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/hollow" />

            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0.8dp"
        android:left="0.8dp"
        android:right="0.8dp"
        android:top="0.8dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/hollow"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/hollow"
                android:startColor="@color/hollow"
                android:type="linear" />

            <padding
                android:bottom="0.8dp"
                android:left="0.8dp"
                android:right="0.8dp"
                android:top="0.8dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="0dp" />
        </shape>
    </item>

</layer-list>