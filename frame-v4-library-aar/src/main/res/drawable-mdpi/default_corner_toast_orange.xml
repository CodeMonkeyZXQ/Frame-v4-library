<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0.3dp"
        android:left="0.3dp"
        android:right="0.3dp"
        android:top="0.3dp">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/orange_toast"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/orange_toast"
                android:startColor="@color/orange_toast"
                android:type="linear" />

            <padding
                android:bottom="0.3dp"
                android:left="0.3dp"
                android:right="0.3dp"
                android:top="0.3dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="3dp" />
            
            <stroke  
		        android:width="0.03dp"  
		        android:color="@color/gray" /> 
        </shape>
    </item>

</layer-list>