<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/titlebar_back_button"
            style="@style/icon_back"
            android:contentDescription="返回"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titlebar_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大圣购车"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/titlebar_next_text"
            style="@style/anchor_next"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:text="下一步"
            android:visibility="gone" />

        <EditText
            android:id="@+id/title_search_input"
            style="@style/textarea_bottom"
            android:layout_height="30dip"
            android:layout_marginLeft="24dip"
            android:layout_weight="1"
            android:drawableLeft="@null"
            android:textColor="@color/white"
            android:textCursorDrawable="@null" />

        <TextView
            android:id="@+id/titlebar_next_button"
            style="@style/icon"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/default_search_selector" />
    </LinearLayout>

    <View
        android:id="@+id/titlebar_divider_line"
        style="@style/divider" >
    </View>

</LinearLayout>